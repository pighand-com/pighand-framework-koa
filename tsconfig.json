{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "incremental": true,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2022",
        "outDir": "lib",
        "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}
